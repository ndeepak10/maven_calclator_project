pipeline {
    agent any

    tools {
        maven 'maven_3.9.9' // Must match the name defined in "Global Tool Configuration"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/ndeepak10/maven_calclator_project.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo 'Build succeeded!'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
